<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark"
		minHeight="40"
		>
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("spark.components.TextInput")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="disabledWithPrompt" />
		<s:State name="normalWithPrompt" />
		<s:State name="disabled" />
		<s:State name="normal" />
	</s:states>
	
	<!-- SkinParts
	name=promptDisplay, type=spark.core.IDisplayText, required=false
	name=textDisplay, type=spark.core.IEditableText, required=false
	-->
	
	<!-- background -->
	<s:Rect width="100%" height="100%" radiusX="3" radiusY="3">
		<s:fill>
			<s:SolidColor color="#994011" />
		</s:fill>
		<s:stroke>
			<s:SolidColorStroke color="#59270C" weight="1" />
		</s:stroke>
	</s:Rect>
	
	<s:Label id="promptDisplay" 
			 includeIn="normalWithPrompt,disabledWithPrompt" 
			 color="#BAB8B6" 
			 width="100%" height="100%" 
			 verticalAlign="middle"
			 />

	<s:RichEditableText id="textDisplay" 
						typographicCase="uppercase"
						fontSize="20" 
						color="#DEBC97" 
						fontWeight="bold" 
						width="100%" 
						height="100%" 
						verticalAlign="middle"
						/>
	
</s:Skin>
