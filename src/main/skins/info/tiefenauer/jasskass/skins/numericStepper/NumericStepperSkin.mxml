<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("spark.components.NumericStepper")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
	</s:states>
	
	<!-- SkinParts
	name=incrementButton, type=spark.components.Button, required=false
	name=textDisplay, type=spark.components.TextInput, required=true
	name=decrementButton, type=spark.components.Button, required=false
	-->
	
	<s:HGroup width="100%" height="100%" gap="0">
		<s:Button id="incrementButton" width="30%" height="100%" skinClass="info.tiefenauer.jasskass.skins.numericStepper.NumericStepperButtonSkin"/>
		<s:TextInput id="textDisplay" width="40%" height="100%" />
		<s:Button id="decrementButton" width="30%" height="100%" skinClass="info.tiefenauer.jasskass.skins.numericStepper.NumericStepperButtonSkin"/>
	</s:HGroup>
</s:Skin>
